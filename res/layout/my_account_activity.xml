<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/home_backgroud" >

    <FrameLayout
        android:id="@id/fraHead"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/head_bg" >

        <TextView
            android:id="@+id/head_back_text"
            style="@style/style_15_EBEBEB_BOLD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:background="@anim/head_back"
            android:gravity="center"
            android:text="返 回" />

        <TextView
            style="@style/style_18_BEBEBE_BOLD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="账号管理" />
    </FrameLayout>


    <RelativeLayout
        android:id="@+id/my_account_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/fraHead"
        android:layout_marginBottom="8.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="10.0dip" >

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/my_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_account_title"
        android:layout_gravity="center"
        android:layout_marginBottom="10.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:background="@anim/shape_rounded_rectangle"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/my_name_lin"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:orientation="horizontal" >

            <TextView
                style="@style/style_17_808183_BOLD"
                android:layout_width="80.0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10.0dip"
                android:gravity="left|center"
                android:text="@string/login_name" />

            <TextView
                android:text="qwe"
                android:id="@+id/my_name_text"
                style="@style/style_14_C21513_BOLD"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10.0dip"
                android:gravity="right|center" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line" />

        <LinearLayout
            android:id="@+id/my_bonus_lin"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:orientation="horizontal" >

            <TextView
                style="@style/style_17_808183_BOLD"
                android:layout_width="80.0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10.0dip"
                android:gravity="left|center"
                android:text="积分：" />

            <TextView
                android:id="@+id/my_bonus_text"
                style="@style/style_14_C21513_BOLD"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10.0dip"
                android:gravity="right|center" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line" />

        <LinearLayout
            android:id="@+id/my_level_lin"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:orientation="horizontal" >

            <TextView
                style="@style/style_17_808183_BOLD"
                android:layout_width="80.0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10.0dip"
                android:gravity="left|center"
                android:text="等级：" />

            <TextView
                android:id="@+id/my_level_text"
                style="@style/style_14_C21513_BOLD"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10.0dip"
                android:gravity="right|center" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_info_function"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_info"
        android:layout_gravity="center"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:background="@anim/shape_rounded_rectangle"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/ll_my_order"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip" >

            <TextView
                style="@style/style_17_808183_BOLD"
                android:layout_width="80.0dip"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dip"
                android:gravity="center_vertical"
                android:text="@string/my_order" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/arrow" />
        </RelativeLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line" />

        <RelativeLayout
            android:id="@+id/ll_my_address"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip" >

            <TextView
                style="@style/style_17_808183_BOLD"
                android:layout_width="80.0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10.0dip"
                android:gravity="left|center"
                android:text="@string/my_address" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/arrow" />
        </RelativeLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line" />

        <RelativeLayout
            android:id="@+id/ll_my_favorities"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:orientation="horizontal" >

            <TextView
                style="@style/style_17_808183_BOLD"
                android:layout_width="80.0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10.0dip"
                android:gravity="left|center"
                android:text="@string/my_favorities" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/arrow" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/loginOut_text"
        style="@style/style_17_FFFFFF_BOLD"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottomBar"
        android:layout_below="@id/my_info_function"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:background="@anim/button_long"
        android:gravity="center"
        android:text="退出登录" />
    <include
        android:id="@id/bottomBar"
        layout="@layout/bottombar" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:id="@id/linToolBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:background="@drawable/bar_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@id/imgHome"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/bar_home_normal" />

        <ImageView
            android:id="@id/imgClassify"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/bar_class_normal" />

        <ImageView
            android:id="@id/imgSearch"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/bar_search_normal" />

        <ImageView
            android:id="@id/imgShoppingCar"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/bar_shopping_normal" />

        <ImageView
            android:id="@id/imgMore"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/bar_more_normal" />
    </LinearLayout>

    <TextView
        android:id="@id/textShopCarNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18.0dip"
        android:layout_marginLeft="220.0dip"
        android:background="@drawable/number_bg"
        android:gravity="center"
        android:paddingBottom="7.0dip"
        android:paddingLeft="7.0dip"
        android:paddingRight="7.0dip"
        android:paddingTop="1.0dip"
        android:textColor="#ffffffff"
        android:textSize="12.0sp"
        android:textStyle="bold" 
        android:visibility="gone"/>

</merge>
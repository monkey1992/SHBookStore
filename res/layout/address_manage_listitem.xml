<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/address_listitem_layout"
        android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="5.0dip"
            android:paddingLeft="10.0dip"
            android:paddingRight="15.0dip"
            android:paddingTop="5.0dip" >

        <LinearLayout
            android:id="@+id/address_listitem_receiver_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收 货 人："
                style="@style/style_14_9F9F9F"
                android:textSize="15.0sp" />

            <TextView
                android:id="@+id/address_listitem_receiver_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/style_14_9F9F9F"
                android:textSize="15.0sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/address_listitem_phone_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系电话："
                style="@style/style_14_9F9F9F"
                android:textSize="15.0sp" />

            <TextView
                android:id="@+id/address_listitem_phone_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/style_14_9F9F9F"
                android:textSize="15.0sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/address_listitem_ads_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收货地址："
                style="@style/style_14_9F9F9F"
                android:textSize="15.0sp" />

            <TextView
                android:id="@+id/address_listitem_ads_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/style_14_9F9F9F"
                android:textSize="15.0sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/address_manage_update_btn"
        android:enabled="true"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/address_listitem_layout"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:background="@drawable/btn_little_blue"
        android:gravity="center_horizontal"
        android:text="修  改"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/address_manage_delete_btn"
        android:enabled="true"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/address_listitem_layout"
        android:layout_toLeftOf="@id/address_manage_update_btn"
        android:background="@drawable/btn_little_white"
        android:gravity="center_horizontal"
        android:text="删  除"
        android:textColor="@color/black" />

</RelativeLayout>
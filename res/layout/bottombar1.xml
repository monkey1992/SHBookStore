<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:id="@id/linToolBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:background="@drawable/bar_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
        
        <RadioGroup 
            android:id="@+id/rgBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            
            <RadioButton
                android:id="@+id/rbHome"
      			android:layout_width="match_parent"
        		android:layout_height="match_parent"
		        android:layout_weight="1"
		        android:button="@android:color/transparent"
		        android:drawableTop="@drawable/bar_home_selected"
		       	android:gravity="center"/>
            
            <RadioButton
                android:id="@+id/rbClassify"
      			android:layout_width="match_parent"
        		android:layout_height="match_parent"
		        android:layout_weight="1"
		        android:button="@android:color/transparent"
		        android:drawableTop="@drawable/bar_class_normal"
		       	android:gravity="center"/>
            
            <RadioButton
                android:id="@+id/rbSearch"
      			android:layout_width="match_parent"
        		android:layout_height="match_parent"
		        android:layout_weight="1"
		        android:button="@android:color/transparent"
		        android:drawableTop="@drawable/bar_search_normal"
		       	android:gravity="center"/>
                        
            <RadioButton
                android:id="@+id/rbShoppingCar"
      			android:layout_width="match_parent"
        		android:layout_height="match_parent"
		        android:layout_weight="1"
		        android:button="@android:color/transparent"
		        android:drawableTop="@drawable/bar_shopping_normal"
		       	android:gravity="center"/>
            
            <RadioButton
                android:id="@+id/rbMore"
      			android:layout_width="match_parent"
        		android:layout_height="match_parent"
		        android:layout_weight="1"
		        android:button="@android:color/transparent"
		        android:drawableTop="@drawable/bar_more_normal"
		       	android:gravity="center"/>
           
        </RadioGroup>

	</LinearLayout>

    <TextView
        android:id="@id/textShopCarNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18.0dip"
        android:layout_marginLeft="220.0dip"
        android:background="@drawable/number_bg"
        android:gravity="center"
        android:paddingBottom="7.0dip"
        android:paddingLeft="7.0dip"
        android:paddingRight="7.0dip"
        android:paddingTop="1.0dip"
        android:textColor="#ffffffff"
        android:textSize="12.0sp"
        android:textStyle="bold" 
        android:visibility="gone"/>

</merge>